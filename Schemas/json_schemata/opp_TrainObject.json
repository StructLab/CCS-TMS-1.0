{
  "$id": "https://ERJU/opp_TrainObject",
  "$schema": "http://json-schema.org/draft-08/schema#",
  "definitions": {
    "opp_MpDrivingMode": {
      "type": "object",
      "properties": {
        "drivingMode": {
          "type": "string",
          "enum": ["undefined", "onSight", "fullSupervision", "standBy"]
        },
        "path": {
          "type": "object",
          "$ref": "#/definitions/infra_LinkedPath"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    },
    "opp_MpSpeed": {
      "type": "object",
      "properties": {
        "vMax": {
          "type": "integer",
          "minimum": 0
        },
        "path": {
          "type": "object",
          "$ref": "#/definitions/infra_LinkedPath"
        }
      },
      "required": ["path"],
      "additionalProperties": false
    },
    "opp_MovementPermission": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "id of the movement permission"
        },
        "riskBuffer": {
          "type": "object",
          "description": "overlap after MP",
          "$ref": "#/definitions/infra_LinkedPath"
        },
        "riskPaths": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "defines the paths over the flank protection area (point, derailer, ...) on the neighboring tracks",
            "$ref": "#/definitions/infra_LinkedPath"
           }
        },
        "pathWay": {
          "type": "object",
          "description": "describes the linear extent of the MA as in actual path of the train",
          "$ref": "#/definitions/infra_LinkedPath"
        },
        "movementModes": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/opp_MpDrivingMode"
           },
          "minItems": 1
        },
        "speeds": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/opp_MpSpeed"
           },
          "minItems": 1
        }
      },
      "required": ["id", "riskBuffer", "pathWay", "movementModes", "speeds"],
      "additionalProperties": false
    },
    "infra_DirTrackEdge": {
      "type": "object",
      "properties": {
        "trackEdge": {
          "type": "string",
          "description": "refers totrack edge"
        },
        "sameDir": {
          "type": "boolean",
          "description": "usage direction of the TrackEdge ;true: active in same direction as trackEdge, false: active in opposite direction"
        }
      },
      "required": ["trackEdge"],
      "additionalProperties": false
    },
    "infra_LinkedPath": {
      "type": "object",
      "description": "Defines a linked path on the topology",
      "properties": {
        "dirTrackEdges": {
          "type": "array",
          "items": {
            "type": "object",
            "description": "composes of directed track edges",
            "$ref": "#/definitions/infra_DirTrackEdge"
           },
          "minItems": 1
        },
        "skipFromPathStart": {
          "type": "integer",
          "minimum": 0,
          "description": "ignore section [0..skipFromStart]"
        },
        "skipFromPathEnd": {
          "type": "integer",
          "minimum": 0,
          "description": "ignore section [skipFromEnd, length]"
        }
      },
      "required": ["dirTrackEdges"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "description": "comes from TrafficCS-PlanExecution",
  "properties": {
    "obuIdentifier": {
      "type": "string"
    },
    "axleLoadCategory": {
      "type": "string",
      "enum": ["AL_A", "AL_HS17", "AL_B1", "AL_B2", "AL_C2", "AL_C3", "AL_C4", "AL_D2", "AL_D3", "AL_D4", "AL_D4XL", "AL_E4", "AL_E5"]
    },
    "movementPermission": {
      "type": "object",
      "$ref": "#/definitions/opp_MovementPermission"
    },
    "trainLength": {
      "type": "integer",
      "minimum": 0
    },
    "safeTrainLength": {
      "type": "boolean"
    },
    "communicationActive": {
      "type": "boolean"
    },
    "trainRunningNumber": {
      "type": "string"
    },
    "vMaxTrain": {
      "type": "integer",
      "minimum": 0
    },
    "onboardOperatingMode": {
      "type": "string",
      "enum": ["undefined", "onSight", "fullSupervision", "standBy"]
    },
    "trainLocation": {
      "type": "object",
      "description": "contains the position of the entire train (i.e., from rear to front) including the confidence intervals",
      "$ref": "#/definitions/infra_LinkedPath"
    },
    "trainObjectIdentifier": {
      "type": "string",
      "description": "Generated by TrainProtectionSystem. It can generate two different trainObjectIds for the same physical train after it disappeared in a radio hole and appeared again."
    },
    "mpRequestedByTrain": {
      "type": "boolean"
    },
    "speed": {
      "type": "integer",
      "minimum": 0
    },
    "cantDeficiencyCategory": {
      "type": "string",
      "enum": ["CD_Undefined", "CD_80mm", "CD_100mm", "CD_130mm", "CD_150mm", "CD_165mm", "CD_180mm", "CD_210mm", "CD_225mm", "CD_245mm", "CD_275mm", "CD_300mm"]
    }
  },
  "required": ["obuIdentifier", "trainRunningNumber", "trainLocation", "trainObjectIdentifier"],
  "additionalProperties": false
}
